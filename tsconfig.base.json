{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "paths": {
      "@backframe/utils/*": ["node_modules/@backframe/utils/dist/thirdparty/*"],
      "@backframe/auth/providers/*": [
        "node_modules/@backframe/auth/dist/providers/*"
      ],
      "@backframe/auth/integrations/*": [
        "node_modules/@backframe/auth/dist/integrations/*"
      ]
    }
  },
  "exclude": ["**/node_modules", "**/dist"]
}
