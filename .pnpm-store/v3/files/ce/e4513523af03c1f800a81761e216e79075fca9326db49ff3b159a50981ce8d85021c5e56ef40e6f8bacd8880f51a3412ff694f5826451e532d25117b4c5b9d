       [boolean]\n//   --info-verbosity                Controls the output of lifecycle messaging\n//                                   e.g. Started watching files...\n//                  [string] [choices: \"none\", \"info\", \"verbose\"] [default: \"info\"]\n//   --build-delimiter               Display custom text after build output[string]\n\n// Options:\n//   --silent       Prevent output from being displayed in stdout         [boolean]\n//   --json, -j     Prints the result as JSON.                            [boolean]\n\ncommander.version(\n    `@swc/cli: ${pkg.version}\n@swc/core: ${swcCoreVersion}`\n);\n\nexport default async function parseSpackArgs(args: string[]): Promise<{\n    cliOptions: SpackCliOptions,\n    spackOptions: BundleOptions,\n}> {\n    //\n    const cmd = commander.parse(args);\n    const opts = cmd.opts();\n\n    const cliOptions: SpackCliOptions = {\n        // watch: !!opts.watch,\n        debug: !!opts.debug,\n    };\n\n    const configOpts: BundleOptions = await compileBundleOptions(opts.config ?? path.resolve('spack.config.js')) as any;\n    if (opts.entry) {\n        configOpts.entry = opts.entry;\n    }\n    if (opts.mode) {\n        configOpts.mode = opts.mode;\n    }\n    if (opts.target) {\n        configOpts.target = opts.target;\n    }\n    if (!configOpts.output) {\n        configOpts.output = {} as any;\n    }\n    if (!configOpts.output.path) {\n        configOpts.output.path = opts.outputPath ?? '[name].js';\n    }\n    if (!configOpts.output.name) {\n        configOpts.output.name = opts.output ?? '[name].js';\n    }\n    // if (!configOpts.output.name) {\n    //     configOpts.output.path = opts.outputPath;\n    // }\n\n    return {\n        cliOptions,\n        spackOptions: {\n            ...configOpts,\n        },\n    }\n}\n\n\nfunction collect(value: any, previousValue: any): Array<string> {\n    // If the user passed the option with no value, like \"babel file.js --presets\", do nothing.\n    if (typeof value !== \"string\") return previousValue;\n\n    const values = value.split(\",\");\n\n    return previousValue ? previousValue.concat(values) : values;\n}\n"],"names":["parseSpackArgs","path","args","cmd","commander","parse","opts","cliOptions","debug","configOpts","compileBundleOptions","config","resolve","entry","mode","target","output","outputPath","name","spackOptions","pkg","require","option","collect","version","swcCoreVersion","value","previousValue","values","split","concat"],"mappings":"AAAA,YAAA;;;EAAA;kBAkK8BA,cAAc,AAlK5C;AAA0C,IAAA,KAAW,WAAX,WAAW,CAAA;AACD,IAAA,MAAiB,WAAjB,iBAAiB,CAAA;AAC/C,IAAA,UAAW,kCAAX,WAAW,EAAA;AACrBC,IAAAA,IAAI,mCAAM,MAAM,EAAZ;AA+JD,eAAeD,cAAc,CAACE,IAAc,EAGxD;IACC,EAAE;IACF,MAAMC,GAAG,GAAGC,UAAS,SAACC,KAAK,CAACH,IAAI,CAAC,AAAC;IAClC,MAAMI,IAAI,GAAGH,GAAG,CAACG,IAAI,EAAE,AAAC;IAExB,MAAMC,UAAU,GAAoB;QAChC,uBAAuB;QACvBC,KAAK,EAAE,CAAC,CAACF,IAAI,CAACE,KAAK;KACtB,AAAC;QAE2DF,OAAW;IAAxE,MAAMG,UAAU,GAAkB,MAAMC,CAAAA,GAAAA,MAAoB,AAAgD,CAAA,sBAA/CJ,CAAAA,OAAW,GAAXA,IAAI,CAACK,MAAM,cAAXL,OAAW,cAAXA,OAAW,GAAIL,IAAI,CAACW,OAAO,CAAC,iBAAiB,CAAC,CAAC,AAAO,AAAC;IACpH,IAAIN,IAAI,CAACO,KAAK,EAAE;QACZJ,UAAU,CAACI,KAAK,GAAGP,IAAI,CAACO,KAAK,CAAC;KACjC;IACD,IAAIP,IAAI,CAACQ,IAAI,EAAE;QACXL,UAAU,CAACK,IAAI,GAAGR,IAAI,CAACQ,IAAI,CAAC;KAC/B;IACD,IAAIR,IAAI,CAACS,MAAM,EAAE;QACbN,UAAU,CAACM,MAAM,GAAGT,IAAI,CAACS,MAAM,CAAC;KACnC;IACD,IAAI,CAACN,UAAU,CAACO,MAAM,EAAE;QACpBP,UAAU,CAACO,MAAM,GAAG,EAAE,AAAO,CAAC;KACjC;IACD,IAAI,CAACP,UAAU,CAACO,MAAM,CAACf,IAAI,EAAE;YACAK,WAAe;QAAxCG,UAAU,CAACO,MAAM,CAACf,IAAI,GAAGK,CAAAA,WAAe,GAAfA,IAAI,CAACW,UAAU,cAAfX,WAAe,cAAfA,WAAe,GAAI,WAAW,CAAC;KAC3D;IACD,IAAI,CAACG,UAAU,CAACO,MAAM,CAACE,IAAI,EAAE;YACAZ,OAAW;QAApCG,UAAU,CAACO,MAAM,CAACE,IAAI,GAAGZ,CAAAA,OAAW,GAAXA,IAAI,CAACU,MAAM,cAAXV,OAAW,cAAXA,OAAW,GAAI,WAAW,CAAC;KACvD;IACD,iCAAiC;IACjC,gDAAgD;IAChD,IAAI;IAEJ,OAAO;QACHC,UAAU;QACVY,YAAY,EAAE;YACV,GAAGV,UAAU;SAChB;KACJ,CAAA;CACJ;;;;;;;;;;;;;;;;gEA5MD;;8CAAA;;;;;4BAAA;;;;AAKA,MAAMW,GAAG,GAAGC,OAAO,CAAC,oBAAoB,CAAC,AAAC;AAM1CjB,UA