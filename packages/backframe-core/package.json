{
  "name": "@backframe/core",
  "version": "0.0.0-alpha.6",
  "description": "The core backframe package responsible for loading the config and invoking plugins",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "author": "Victor Ndaba <vndabam@gmail.com>",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@backframe"
  },
  "scripts": {
    "build": "tsc",
    "lint": "pnpm lint:types && pnpm lint:fmt",
    "lint:fix": "eslint . --fix",
    "lint:types": "eslint .",
    "format": "prettier --write ./src/**/*.ts",
    "lint:fmt": "prettier --check ./src/**/*.ts",
    "prebuild": "rimraf dist"
  },
  "devDependencies": {
    "@backframe/eslint-config": "workspace:*",
    "@backframe/models": "workspace:*",
    "@types/lodash.merge": "^4.6.7"
  },
  "dependencies": {
    "@backframe/utils": "workspace:*",
    "dotenv": "^16.0.2",
    "esbuild": "^0.17.5",
    "globby": "^13.1.2",
    "lodash.merge": "^4.6.2",
    "tsconfig-resolver": "^3.0.1",
    "zod": "^3.19.1"
  },
  "eslintIgnore": [
    "dist/*"
  ],
  "eslintConfig": {
    "extends": "@backframe/eslint-config"
  }
}
